// converts fonts defined in json file to variables:
fonts = json(pathjoin('tokens', 'fonts.json'), { hash: true })

for $profile, $font-family in values(fonts)
  @font-face
    font-family $font-family
    src s('url(../fonts/%s.woff2) format("woff2"), url(../fonts/%s.woff) format("woff")', $font-family, $font-family)
    font-weight normal
    font-style normal
    font-display optional
