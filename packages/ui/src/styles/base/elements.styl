.uie
  height 100%
  line-height var(--uie-line-height)
  font-family var(--uie-font-family-light)
  font-weight var(--uie-font-weight-light)
  @media print
    font-size 10pt
  @media $mq-up_to_m
    font-size var(--uie-base-font-size-s)
  @media $mq-m_to_l
    font-size var(--uie-base-font-size-m)
  @media $mq-l_and_up
    font-size var(--uie-base-font-size-l)

  *
    margin 0
    padding 0
    border 0
    box-sizing border-box
    vertical-align baseline

  @media (prefers-reduced-motion: reduce)
    *
      animation none !important
      transition none !important

  body
    height 100%

  h1
  h2
  h3
    font-family var(--uie-font-family-bold)
    font-weight var(--uie-font-weight-bold)

  h1
    font-size var(--uie-font-size-xxl)
    line-height var(--uie-line-height-heading)

  h2
    font-size var(--uie-font-size-xl)
    line-height var(--uie-line-height-heading)

  h3
    font-size var(--uie-font-size-l)

  h4
  h5
  h6
    font-family var(--uie-font-family-regular)
    font-size var(--uie-font-size-m)
    font-weight var(--uie-font-weight-regular)

  .intro
    font-family var(--uie-font-family-bold)
    font-size var(--uie-font-size-l)
    font-weight var(--uie-font-weight-bold)

  .intro,
  details
    color var(--uie-color-secondary-text)

  em,
  strong
    font-style var(--uie-font-style-italic)
    font-weight var(--uie-font-weight-italic)

  em,
  summary
    font-family var(--uie-font-family-lightitalic)
    font-weight var(--uie-font-weight-light)

  strong
    font-family var(--uie-font-family-bold)
    font-weight var(--uie-font-weight-bold)

  em strong,
  strong em
    font-family var(--uie-font-family-bolditalic)
    font-weight var(--uie-font-weight-bold)

  table
    border-collapse collapse

    caption
      font-family var(--uie-font-family-regular)
      font-size var(--uie-font-size-l)
      font-weight var(--uie-font-weight-regular)
      text-align left
      margin-bottom var(--uie-space-m)

    th
      color var(--uie-color-secondary-text)
      text-align left
      border-bottom 1px solid var(--uie-color-border-medium)
      font-family var(--uie-font-family-light)
      font-size var(--uie-font-size-xs)
      font-weight var(--uie-font-weight-light)

    td
      border-bottom 1px solid var(--uie-color-border-light)
      font-size var(--uie-font-size-s)

    th,
    td
      vertical-align top
      padding var(--uie-space-s) var(--uie-space-m)
      &:first-child:not(.uie-rowspan-left)
        padding-left 0
      &:last-child:not(.uie-rowspan-right)
        padding-right 0

  hr
    border-top 1px solid var(--uie-color-border-light)

  mark
    padding var(--uie-space-xxs) var(--uie-space-xs)
    border-radius var(--uie-space-xs)
    background-color var(--uie-color-accent-light)

  code
    code()
    padding var(--uie-space-xxs) var(--uie-space-xs)
    border-radius var(--uie-space-xs)
    background-color var(--uie-color-bg-light)

  pre
    code()
    overflow-x auto
    // defaults, will be overriden by hljs
    color var(--uie-color-code-text)
    background-color var(--uie-color-code-bg)
    // use important to override hljs styling which differs per theme
    padding var(--uie-space-m) !important
    // reset inline code styles when nested in pre
    code
      padding 0
      border-radius 0
      background-color transparent

  select
    border 1px solid var(--uie-color-border-medium)
